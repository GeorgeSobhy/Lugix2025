@model List<TagModel>

@{
	ViewData["Title"] = "Tags";
}
<style>
	body {
		background-color: #4070f4;
	}

	.tag-form-container {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Poppins', sans-serif;
	}

	.tag-form-body {
		min-height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		background: #4070f4;
	}

	.tag-form-wrapper {
		background: #fff;
		padding: 20px;
		border-radius: 8px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		width: 100%;
		max-width: 500px;
		margin-top: 10%;
	}

	.tag-form-group {
		margin-bottom: 15px;
	}

	.tag-form-label {
		display: block;
		margin-bottom: 5px;
		font-weight: bold;
	}

	.tag-form-input {
		width: 100%;
		padding: 8px;
		border: 1px solid #ccc;
		border-radius: 4px;
	}

	.tag-form-error {
		color: red;
		font-size: 12px;
	}

	.tag-form-check-label {
		margin-left: 5px;
	}

	.tag-form-submit-button {
		background-color: #4070f4;
		border: none;
		padding: 10px 20px;
		color: white;
		border-radius: 4px;
		cursor: pointer;
	}

		.tag-form-submit-button:hover {
			background-color: #3056d3;
		}

	.tag-form-back-link {
		display: block;
		margin-top: 15px;
		text-align: center;
		color: #4070f4;
		text-decoration: none;
	}

		.tag-form-back-link:hover {
			text-decoration: underline;
		}
</style>

<div class="tag-form-body">
	<div class="tag-form-wrapper">
		<h4>All Tag</h4>
		<hr />
		<div>
			<h4>TagModel</h4>
			<hr />
			<dl class="row">
				@foreach (var tag in Model)
				{

					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => tag.Id)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => tag.Id)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => tag.Name)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => tag.Name)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => tag.Description)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => tag.Description)
					</dd>
				}
			</dl>
		</div>
		<div>
			<a asp-action="Index" class="tag-form-back-link">Back to List</a>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}